        </div>
      </div>
    </nav>

  </header>

  <section class="form-simple">
    <div class="container wow fadeInLeft data-wow-delay=" 3s "">
      <%if (error_msg.length > 0) {%>
        <div class="alert alert-danger alert-dismissable">
          <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
          <%= error_msg %>
        </div>
        <%};%>

          <ol class="breadcrumb">
            <li class="breadcrumb-item isactive">
              <a href="/student">View All Student</a>
            </li>
            <li class="breadcrumb-item">Add Student</li>
          </ol>

          <!--Form with header-->
          <div class="card">

            <!--Header-->
            <div class="header pt-3 grey lighten-2">

              <div class="row d-flex justify-content-start text-capitalize text-center">
                <h3 class="deep-grey-text mt-3 mb-4 pb-1 mx-5">Add Student</h3>
              </div>

            </div>
            <!--Header-->

            <div class="card-body mx-4 mt-4">

              <!--Body-->
              <form action="/student/add" method="post">
                <div class="md-form">
                  <input type="text" id="firstname" name="firstName" class="form-control" required>
                  <label>Your First Name
                    <abbr title="This field is mandatory">*</abbr>
                  </label>
                </div>
                <div class="md-form">
                  <input type="text" name="lastName" class="form-control" required>
                  <label>Your last Name
                    <abbr title="This field is mandatory">*</abbr>
                  </label>
                </div>
                <div class="md-form">
                  <input type="email" name="email" class="form-control" required>
                  <label>Your email
                    <abbr title="This field is mandatory">*</abbr>
                  </label>
                </div>
                <div class="md-form">
                  <input type="text" name="address" class="form-control">
                  <label>Your Address</label>
                </div>
                <div class="md-form">
                  <select name="gender" class="form-control" required>
                    <abbr title="This field is mandatory">*</abbr>
                    <option value="male">Male</option>
                    <option value="female">Female</option>
                  </select>
                </div>
                <div class="form-group">
                  <select name="level" class="form-control" required placeholder="Enter Your level">
                    <abbr title="This field is mandatory">*</abbr>
                    <option value="">Enter Your Level</option>
                    <option value="100">100</option>
                    <option value="200">200</option>
                    <option value="300">300</option>
                    <option value="400">400</option>
                    <option value="500">500</option>
                  </select>
                </div>
                <br>
                <hr>
                <div class="md-form">
                  <input type="number" name="phoneNumber" class="form-control" placeholder="Enter using 2348088884650" name="quantity" max="13">
                  <label>Your phone Number</label>
                </div>
                <div class="form-group">
                  <label>Your Date of Birth
                    <abbr title="This field is mandatory">*</abbr>
                  </label>
                  <input type="date" name="dob" class="form-control" required>
                </div>
                <div class="md-form">
                  <input type="text" name="course" class="form-control">
                  <label>Your Course of study</label>
                </div>
                <div class="text-center">
                  <button class="btn btn-unique" type="submit">Add Student
                    <i class="fa fa-paper-plane-o ml-1"></i>
                  </button>
                </div>
              </form>
            </div>

          </div>
          <!--/Form with header-->
    </div>
  </section>

  <footer class="footer text-center" style="background-color: #ffc107;">
    <p style="margin : 0; padding : 5px;">Made With ðŸ’– by Ipaye Alameen</p>
