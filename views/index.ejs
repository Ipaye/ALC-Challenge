    <!--Intro Section-->
    <section class="view intro-2 hm-gradient">
      <div class="full-bg-img">
        <div class="container flex-center">
          <div class="row flex-center pt-5 mt-3">
            <div class="col-md-6 text-center text-md-left margins">
              <div class="white-text">
                <h1 class="h1-responsive wow fadeInLeft" data-wow-delay="0.3s">Welcome to the ALC Student Records</h1>
                <hr class="hr-light wow fadeInLeft" data-wow-delay="0.3s">
                <h6 class="wow fadeInLeft" data-wow-delay="0.3s">We keep track of all the informations of Students ranging from their Names to their course of student. To
                  access the student details portal, click on the links below</h6>
                <br>
                <a class="btn btn-outline-white wow fadeInLeft" data-wow-delay="0.3s" href="/student">View Students
                  <i class="fa fa-eye" aria-hidden="true"></i>
                </a>
                <a class="btn btn-outline-white wow fadeInLeft" data-wow-delay="0.3s" href="/student/add">Add Students
                  <i class="fa fa-child" aria-hidden="true"></i>
                </a>
              </div>
            </div>

            <div class="col-md-6 wow fadeInRight d-flex justify-content-center" data-wow-delay="0.3s">
              <img src="http://res.cloudinary.com/ipaye/image/upload/dl_3,f_auto,fl_progressive.rasterize,q_80/v1509044177/Black%20guy.png"
